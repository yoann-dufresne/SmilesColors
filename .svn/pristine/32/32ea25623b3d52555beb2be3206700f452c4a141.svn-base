/* ------------------- */
/* ----- General ----- */
/* ------------------- */

html {
	background-color: gray;
}

body {
	width: 960px;
	padding: 5px;
	margin: auto;
	padding-top: 85px;
	background-color: white;
}



/* ------------------- */
/* ------ Menu ------- */
/* ------------------- */

#menu {
	position: fixed;
	top: 0px;
	padding: 0px;
	padding-top: 20px;
	padding-bottom: 20px;
	margin: 0px;
	width: 960px;
	background-color: #E8E8E8;
}

#menu li {
	font-size: x-large;
	display: inline-block;
	margin-left: 80px;
	padding: 5px;
	border: solid black 1px;
}



/* ------------------- */
/* ---- Coverages ---- */
/* ------------------- */

.miniImg {
height: 150px;
width: 150px;
}

.peptide>* {
vertical-align: middle;
display: inline-block;
}

.colors>.color {
height: 20px;
width: 20px;
display: inline-block;
}

.coverage {
margin-bottom: 20px;
padding: 10px;
border: black solid 1px;
}

.monomer>p {
text-align: center;
}

.covImage {
height: 500px;
width: 500px;
}

.list {
overflow: auto;
white-space: nowrap;
}

.list>div {
display: inline-block;
}

.colors {
text-align: center;
}
